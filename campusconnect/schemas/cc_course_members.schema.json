{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "description":"Data schema for JSON representation of CampusConnect course_members resource",
  "type":"object",
  "properties": {
    "lectureID": {"type":"string", "required":true},
    "members": {
      "type":"array",
      "items": {
        "type":"object",
        "properties": {
          "personID": {"type":"string", "required":true},
          "personIDtype": { "enum": [ "ecs_PersonalUniqueCode", "ecs_ePPN", "ecs_login", "ecs_loginUID", "ecs_uid", "ecs_email" ], "required":false },
          "role": {"type":"integer", "required":true},
          "groups": {
            "type":"array",
            "items": {
              "type":"object",
              "properties": {
                "num": {"type":"integer", "required":true},
                "role": {"type":"integer"}
              },
              "additionalProperties" : false
            }
          }
        },
        "additionalProperties" : false
      }
    }
  },
  "additionalProperties" : false
}
